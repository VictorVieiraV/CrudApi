@model IEnumerable<Domain.Colaborador>

@{
    ViewData["Title"] = "Index";
}

<h1>Sistema X</h1>

<p>
    <a asp-action="Create">Cadastrar Colaborador</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                Dias para Aniversário
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiasParaAniversario)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Cpf">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Cpf">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    int paginaAtual = ViewBag.paginaAtual;
    int proximaPagina = paginaAtual + 1;
    int paginaAnterior = paginaAtual - 1;
    var prevDisabled = paginaAtual <= 1 ? "disabled" : "";
    var nextDisabled = ViewBag.ultimoDado == 0 ? "disabled" : "";
}
<a asp-action="Index"
   asp-route-id="@paginaAnterior"
   class="btn btn-primary @prevDisabled">
    Previous
</a>

<a asp-action="Index"
   asp-route-id="@proximaPagina"
   asp-page-=""
   class="btn btn-primary @nextDisabled">
    Next
</a>
